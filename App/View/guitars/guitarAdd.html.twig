{% include 'header.html.twig' %}
<div class="row">
    <div class="jumbotron bg-dark text-white pt-3 pb-3">
        <h1 class="display-4 text-center">Gitár hozzáadás</h1>
    </div>
</div>
<div class="container mt-5 d-flex justify-content-center">
    <div class="col-sm-6">
        <form action="guitarAdd" method="POST">
            <div class="form-group">
                <label for="manufacturer">Gyártó*</label>
                <input type="text" class="form-control" name="manufacturer" id="manufacturer" required>
            </div>
            <div class="form-group">
                <label for="type">Típus*</label>
                <input type="text" class="form-control" name="type" id="type" required>
            </div>
            <div class="form-group">
                <label for="guitarCategory">Kategória*</label>
                <select name="guitarCategory" class="form-control" id="guitarCategory">
                    {% for guitarCategory in guitarCategories %}
                    <option value="{{guitarCategory.id}}">{{guitarCategory.nev}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="numberOfStrings">Húrok száma</label>
                <input type="number" class="form-control" name="numberOfStrings" id="numberOfStrings">
            </div>
            <div class="form-group">
                <label for="price">Ár*</label>
                <input type="number" class="form-control" name="price" id="price" required>
            </div>
            <div class="form-group">
                <label for="qty">Raktár mennyiség</label>
                <input type="number" class="form-control" name="qty" id="qty">
            </div>
            <div class="form-check mt-3">
                <input type="checkbox" name="status" id="status" checked>
                <label for="status">Aktív</label>
            </div>
            <div class="form-group mt-3 justify-content-between d-flex">
                <a href="javascript:history.go(-1)" class="btn btn-warning">Vissza</a>
                <button type="submit" class="btn btn-success text-white" name="save">Mentés</button>
            </div>
        </form>
    </div>
</div>

{% include 'footer.html.twig' %}